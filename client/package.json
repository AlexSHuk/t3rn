{
  "version": "0.1.0",
  "private": true,
  "engines": {
    "yarn": "^1.10.1"
  },
  "workspaces": [
    "types/*"
  ],
  "resolutions": {
    "@polkadot/api": "^6.4.1",
    "@polkadot/types": "^6.4.1"
  },
  "scripts": {
    "build": "yarn build:interfaces && polkadot-dev-build-ts",
    "build:release": "polkadot-ci-ghact-build",
    "build:interfaces": "node -r ts-node/register -r tsconfig-paths/register types/types/scripts/generate.ts && node -r ts-node/register -r tsconfig-paths/register types/type-definitions/scripts/generate.ts",
    "lint": "polkadot-dev-run-lint",
    "clean": "polkadot-dev-clean-build",
    "postinstall": "polkadot-dev-yarn-only",
    "test": "polkadot-dev-run-test --coverage",
    "check-deps": "./node_modules/@open-web3/util/scripts/check-deps.js yarn.lock @polkadot/ @open-web3/",
    "update-metadata": "ts-node --project ./tsconfig.json types/types/scripts/updateMetadata.ts"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/register": "^7.15.3",
    "@babel/runtime": "^7.15.4",
    "@open-web3/dev-config": "^0.1.13",
    "@open-web3/util": "^1.0.1",
    "@types/jest": "^27.0.2",
    "ts-node": "^10.3.0",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.4"
  }
}
